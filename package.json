{
  "name": "react-companies",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://www.react-companies.com",
  "engines": {
    "node": ">=8.9.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewtpoe/react-companies.git"
  },
  "scripts": {
    "build": "react-scripts build",
    "deploy": "gh-pages -d build",
    "eject": "react-scripts eject",
    "postbuild": "react-snap",
    "precommit": "lint-staged",
    "predeploy": "npm run build",
    "prettier":
      "prettier --ignore-path ./.eslintignore --write {src,public}/**/*.{css,js,json,md}",
    "start": "react-scripts start",
    "test": "react-scripts test --env=jsdom"
  },
  "lint-staged": {
    "*.js": ["prettier", "git add"]
  },
  "inlineCss": true,
  "minifyHtml": {
    "collapseWhitespace": true,
    "removeComments": true
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "polished": "^1.9.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.4",
    "styled-components": "^3.2.6",
    "styled-components-modifiers": "^1.0.1"
  },
  "devDependencies": {
    "gh-pages": "^1.1.0",
    "lint-staged": "^7.1.0",
    "react-snap": "^1.12.2"
  }
}
